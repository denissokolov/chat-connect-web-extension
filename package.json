{
  "name": "chat-connect-web-extension",
  "author": "Denis Sokolov <dnssokolov@gmail.com>",
  "license": "MIT",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "dev": "tsc -b && vite build --watch --mode development",
    "tsc:app": "tsc -p ./tsconfig.app.json --noEmit  --incremental false",
    "tsc:node": "tsc -p ./tsconfig.node.json --noEmit  --incremental false",
    "tsc": "npm run tsc:app && npm run tsc:node",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest --project=unit run",
    "test:storybook": "vitest --project=storybook run",
    "knip": "knip",
    "check": "npm run tsc && npm run lint && npm run test && npm run knip",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.533.0",
    "luxon": "^3.7.1",
    "markdown-to-jsx": "^7.7.12",
    "openai": "^5.10.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/js": "^9.32.0",
    "@storybook/addon-a11y": "^9.0.18",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/addon-vitest": "^9.0.18",
    "@storybook/react-vite": "^9.0.18",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/luxon": "^3.7.0",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "chromatic": "^13.1.2",
    "chrome-types": "^0.1.365",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-storybook": "^9.0.18",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.1",
    "prettier": "3.6.2",
    "storybook": "^9.0.18",
    "tw-animate-css": "^1.3.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
