{
    "name": "Chat Connect",
    "version": "0.1",
    "manifest_version": 3,
    "action": {
      "default_icon": "icon.png",
      "default_title": "Chat Connect"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        }
      }
    },
    "permissions": ["sidePanel", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"]
  }