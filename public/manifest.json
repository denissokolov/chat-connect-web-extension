{
  "name": "Chat Connect",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_title": "Chat Connect"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "settings.html",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}